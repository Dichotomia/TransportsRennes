<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="fr.ybo.transportsrennes">
    <application android:icon="@drawable/icon" android:label="@string/app_name"
                 android:debuggable="true" android:name="BusRennesApplication"
                 android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name=".TransportsRennes">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".BusRennes"/>
        <activity android:name=".ListAlerts"></activity>
        <activity android:name=".DetailAlert"></activity>
        <activity android:name=".ListArret"></activity>
        <activity android:name=".DetailArret"></activity>
        <activity android:name=".ListFavoris"></activity>
        <activity android:name=".ListStationsByPosition"></activity>
    </application>
    <uses-sdk android:minSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>
