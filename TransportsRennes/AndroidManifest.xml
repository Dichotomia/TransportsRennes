<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="fr.ybo.transportsrennes"
          android:installLocation="auto"
          android:versionCode="237"
          android:versionName="2.3.7">
    <application android:icon="@drawable/icon" android:label="@string/app_name"
                 android:debuggable="false" android:name="TransportsRennesApplication"
                 android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name=".TransportsRennes" android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".BusRennes" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListAlerts" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".DetailAlert" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListArret" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".DetailArret" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListFavoris" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".TabFavoris" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListStationsByPosition" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListStationsFavoris" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListArretByPosition" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListParkRelais" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListPointsDeVente" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".TabAlertes" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListTwitter" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ArretsOnMap" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".StationsOnMap" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ParkRelaisOnMap" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".PointsDeVentesOnMap" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".AllOnMap" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".DetailTrajet" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ItineraireRequete" android:configChanges="orientation|keyboardHidden" android:label="@string/btn_itineraires"
                  android:theme="@android:style/Theme"/>
        <activity android:name=".Itineraires" android:configChanges="orientation|keyboardHidden" android:label="@string/btn_itineraires"
                  android:theme="@android:style/Theme"/>
        <activity android:name=".TrajetOnMap" android:configChanges="keyboardHidden"/>
        <activity android:name=".PreferencesRennes" android:configChanges="orientation|keyboardHidden"/>
        
        <service
            android:name=".UpdateTimeService"
            android:label="TransportsRennesUpdateTimeService" >

            <intent-filter>
                <action android:name="fr.ybo.transportsrennes.action.UPDATE" />
            </intent-filter>
        </service>
        <receiver  android:process=":remote" android:name=".util.AlarmReceiver" android:label="TransportsRennesAlarmReceiver"></receiver>
        <receiver android:name=".TransportsWidget" android:label="@string/widget22_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/transportswidget"/>
        </receiver>
        <activity android:name=".TransportsWidgetConfigure">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        
        <receiver android:name=".TransportsWidget11" android:label="@string/widget11_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/transportswidget11"/>
        </receiver>
        <activity android:name=".TransportsWidget11Configure">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        
        <receiver android:name=".TransportsWidget21" android:label="@string/widget21_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/transportswidget21"/>
        </receiver>
        <activity android:name=".TransportsWidget21Configure">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        
        <!-- Cappbrain -->
        <meta-data android:name="capptain:reportLocation" android:value="true"/>

		<service android:name="com.ubikod.capptain.android.service.CapptainService"
			android:label="TransportsRennesService" android:process=":Capptain">
			<intent-filter>
				<category android:name="android.intent.category.DEFAULT" />
				<action android:name="com.ubikod.capptain.ICapptainService" />
				<data android:scheme="capptain" />
			</intent-filter>
			<meta-data android:name="capptain:api:level" android:value="8" />
			<meta-data android:name="capptain:api:id" android:value="b6a5b1113175bf391e442a8653876b84" />
		</service>
        <!-- Cappbrain -->

        <uses-library android:name="com.google.android.maps"/>
    </application>

    <uses-sdk android:minSdkVersion="3"
              android:targetSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
</manifest>
