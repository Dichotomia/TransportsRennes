            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".BusRennes" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListAlerts" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".DetailAlert" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListArret" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".DetailArret" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListFavoris" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListStationsByPosition" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListStationsFavoris" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ListArretByPosition" android:configChanges="orientation|keyboardHidden"/>
    </application>
    <uses-sdk android:minSdkVersion="3"
              android:targetSdkVersion="8"
              android:maxSdkVersion="9"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>
