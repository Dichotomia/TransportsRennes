<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/home_btn_bus"
                style="@style/HomeButton"
                android:layout_weight="1"
                android:contentDescription="@string/btn_bus"
                android:src="@drawable/home_btn_bus" />

            <TextView
                style="@style/HomeText"
                android:text="@string/btn_bus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/home_btn_bus_favori"
                style="@style/HomeButton"
                android:layout_weight="1"
                android:contentDescription="@string/btn_bus_favori"
                android:src="@drawable/home_btn_bus_favori" />

            <TextView
                style="@style/HomeText"
                android:text="@string/btn_bus_favori" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

        <ImageButton
            android:id="@+id/home_btn_bus_gps"
            style="@style/HomeButton"
            android:layout_weight="1"
            android:contentDescription="@string/btn_bus_gps"
            android:src="@drawable/home_btn_bus_gps" />

            <TextView
                style="@style/HomeText"
                android:text="@string/btn_bus_gps" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

        <ImageButton
            android:id="@+id/home_btn_alert"
            style="@style/HomeButton"
            android:layout_weight="1"
            android:contentDescription="@string/btn_alert"
            android:src="@drawable/home_btn_alert" />

            <TextView
                style="@style/HomeText"
                android:text="@string/btn_alert" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

        <ImageButton
            android:id="@+id/home_btn_velo"
            style="@style/HomeButton"
            android:layout_weight="1"
            android:contentDescription="@string/btn_velo"
            android:src="@drawable/home_btn_velo" />

            <TextView
                style="@style/HomeText"
                android:text="@string/btn_velo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

        <ImageButton
            android:id="@+id/home_btn_velo_favori"
            style="@style/HomeButton"
            android:layout_weight="1"
            android:contentDescription="@string/btn_velo_favori"
            android:src="@drawable/home_btn_velo_favori" />

            <TextView
                style="@style/HomeText"
                android:text="@string/btn_velo_favori" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

        <ImageButton
            android:id="@+id/home_btn_parking"
            style="@style/HomeButton"
            android:layout_weight="1"
            android:contentDescription="@string/btn_parking"
            android:src="@drawable/home_btn_parking" />

            <TextView
                style="@style/HomeText"
                android:text="@string/btn_parking" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

        <ImageButton
            android:id="@+id/home_btn_itineraires"
            style="@style/HomeButton"
            android:layout_weight="1"
            android:contentDescription="@string/btn_itineraires"
            android:src="@drawable/home_btn_itineraire" />

            <TextView
                style="@style/HomeText"
                android:text="@string/btn_itineraires" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>