<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/appwidget_bg"
                android:id="@+id/widgetlayout" android:layout_width="wrap_content" android:layout_height="wrap_content">

        <ImageView android:id="@+id/iconeLigne"
                   android:layout_width="13dip"
                   android:layout_height="13dip"
                   android:paddingTop="3dip"
                   android:paddingLeft="3dip"
                   android:gravity="center_vertical|center_horizontal"/>

        <TextView android:id="@+id/nomArret"
                  android:paddingLeft="2dip"
                  android:paddingTop="2dip"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="7dip"
                  android:textColor="#E1E1E1"
                  android:gravity="center_vertical|left"
                  android:layout_toRightOf="@id/iconeLigne"/>

        <TextView android:id="@+id/directionArret"
                  android:paddingLeft="2dip"
                  android:paddingTop="0dip"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="5dip"
                  android:textColor="#E1E1E1"
                  android:gravity="center_vertical|left"
                  android:layout_below="@id/nomArret"
                  android:layout_alignLeft="@id/nomArret"/>

        <TextView android:id="@+id/tempsRestant"
                  android:paddingLeft="2dip"
                  android:paddingTop="2dip"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="14dip"
                  android:textColor="#E1E1E1"
                  android:gravity="center_vertical|center_horizontal"
                  android:layout_below="@+id/directionArret"/>

        <TextView android:id="@+id/tempsRestantFutur"
                  android:paddingLeft="2dip"
                  android:paddingTop="2dip"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="14dip"
                  android:textColor="#E1E1E1"
                  android:gravity="center_vertical|center_horizontal"
                  android:layout_below="@+id/tempsRestant"/>

</RelativeLayout>