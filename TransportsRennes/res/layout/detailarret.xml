<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/conteneurImage"
                  android:layout_width="44dip"
                  android:paddingBottom="5dip"
                  android:paddingTop="5dip"
                  android:paddingLeft="2dip"
                  android:paddingRight="2dip"
                  android:layout_height="50dip"
                  android:gravity="center_vertical|center_horizontal"/>
    <TextView android:id="@+id/nomLong"
              android:padding="5dip"
              android:layout_width="fill_parent"
              android:layout_height="50dip"
              android:textSize="20dip"
              android:gravity="center_vertical|fill_horizontal"
              android:layout_toRightOf="@id/conteneurImage"/>

    <TextView android:id="@+id/detailArret_nomArret"
              android:paddingLeft="5dip"
              android:paddingTop="5dip"
              android:paddingBottom="3dip"
              android:layout_width="wrap_content"
              android:layout_height="30dip"
              android:textSize="20dip"
              android:gravity="center_vertical|left"
              android:layout_below="@id/conteneurImage"
              android:layout_alignParentLeft="true"/>
    <TextView android:id="@+id/detailArret_direction"
              android:paddingRight="5dip"
              android:paddingTop="5dip"
              android:paddingBottom="3dip"
              android:layout_width="wrap_content"
              android:layout_height="30dip"
              android:textSize="20dip"
              android:gravity="center_vertical|right"
              android:layout_below="@id/nomLong"
              android:layout_alignParentRight="true"/>

    <TextView android:paddingLeft="10dip"
              android:paddingRight="10dip"
              android:paddingTop="5dip"
              android:paddingBottom="3dip"
              android:layout_width="wrap_content"
              android:layout_height="30dip"
              android:textSize="20dip"
              android:gravity="center_vertical|left"
              android:layout_toLeftOf="@id/detailArret_direction"
              android:layout_below="@id/conteneurImage"
              android:text="vers"/>

    <ListView android:id="@id/android:list"
              android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:layout_below="@id/detailArret_nomArret"
              android:layout_alignParentLeft="true"/>

</RelativeLayout>