<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/conteneurImage"
                  android:layout_width="44dip"
                  android:paddingBottom="5dip"
                  android:paddingTop="5dip"
                  android:paddingLeft="2dip"
                  android:paddingRight="2dip"
                  android:layout_height="50dip"
                  android:gravity="center_vertical|center_horizontal"/>
    <ImageView android:id="@+id/googlemap"
               android:layout_width="44dip"
               android:paddingBottom="5dip"
               android:paddingTop="5dip"
               android:paddingLeft="2dip"
               android:paddingRight="4dip"
               android:layout_height="50dip"
               android:src="@android:drawable/ic_dialog_map"
               android:layout_alignParentRight="true"/>
    <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_toRightOf="@id/conteneurImage"
            android:layout_toLeftOf="@id/googlemap">
        <TextView android:id="@+id/nomLong"
                  android:padding="5dip"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:textSize="20dip"
                  android:gravity="center_vertical|left"/>
    </HorizontalScrollView>
    <HorizontalScrollView android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/conteneurImage"
                          android:id="@+id/detailArret_scrolling">
        <TextView android:id="@+id/detailArret_nomArret"
                  android:paddingLeft="5dip"
                  android:paddingRight="5dip"
                  android:paddingTop="5dip"
                  android:paddingBottom="3dip"
                  android:layout_width="fill_parent"
                  android:layout_height="38dip"
                  android:textSize="20dip"
                  android:gravity="center_vertical|left"
                  android:layout_alignParentLeft="true"/>
    </HorizontalScrollView>

    <ImageView android:layout_width="fill_parent"
               android:layout_height="10dip"
               android:layout_below="@id/detailArret_scrolling"
               android:paddingTop="4dip"
               android:paddingBottom="0dip"
               android:src="@android:drawable/divider_horizontal_dim_dark"
               android:id="@+id/separateur"/>

    <ListView android:id="@id/android:list"
              android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:layout_below="@id/separateur"
              android:layout_alignParentLeft="true"
              android:divider="@android:drawable/divider_horizontal_dim_dark"/>
    <TextView android:id="@id/android:empty"
              android:layout_width="fill_parent" android:layout_height="fill_parent"
              android:layout_below="@id/separateur"
              android:layout_alignParentLeft="true"
              android:gravity="center"
              android:textSize="18dip"
              android:padding="10dip"
              android:text="Plus de bus aujourd'hui, vous pouvez voir tous les bus de la journée ou choisir une date particulière via le menu..."/>

</RelativeLayout>