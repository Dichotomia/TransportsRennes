<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/appwidget_bg_serre" android:id="@+id/widgetlayout"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<ImageView android:id="@+id/iconeLigne" android:layout_width="15dip"
		android:layout_height="15dip" android:paddingTop="0dip"
		android:paddingLeft="0dip" android:gravity="center_vertical|center_horizontal" />

	<TextView android:id="@+id/nomArret" android:paddingLeft="2dip"
		android:paddingTop="2dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="9dip"
		android:textColor="#E1E1E1" android:gravity="center_vertical|left"
		android:layout_toRightOf="@id/iconeLigne" />

	<TextView android:id="@+id/directionArret"
		android:paddingLeft="4dip" android:paddingTop="2dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="9dip" android:textColor="#E1E1E1" android:gravity="center_vertical|left"
		android:layout_toRightOf="@id/nomArret" />

	<LinearLayout android:layout_height="wrap_content"
			android:paddingTop="6dip"
		android:layout_width="fill_parent" android:layout_below="@id/iconeLigne"
		android:orientation="horizontal" android:id="@+id/layoutTempsRestant">

		<TextView android:id="@+id/tempsRestantPasse" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:textSize="16dip" android:textColor="#E1E1E1"
			android:gravity="center_vertical|center_horizontal" />

		<TextView android:id="@+id/tempsRestant" 
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="16dip" android:layout_weight="1" android:textColor="#E1E1E1"
			android:gravity="center_vertical|center_horizontal" />

		<TextView android:id="@+id/tempsRestantFutur" android:layout_weight="1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="16dip" android:textColor="#E1E1E1"
			android:gravity="center_vertical|center_horizontal" />

	</LinearLayout>


	<TextView android:id="@+id/prochainBus" android:paddingTop="8dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="17dip"
		android:textColor="#E1E1E1" android:gravity="center_vertical|center_horizontal"
		android:layout_below="@id/layoutTempsRestant" />



</RelativeLayout>
