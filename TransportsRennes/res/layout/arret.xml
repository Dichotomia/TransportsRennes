<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageCorrespondance"
        android:layout_width="35dip"
        android:layout_height="70dip"
        android:layout_alignParentLeft="true"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:paddingTop="0dip"
        android:src="@drawable/lignesanscorrespondance" />

    <ImageView
        android:id="@+id/isfavori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="4dip"
        android:paddingTop="7dip" />

    <TextView
        android:id="@+id/directionArret"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageCorrespondance"
        android:layout_below="@+id/nomArret"
        android:layout_toLeftOf="@+id/iconeHandicap"
        android:layout_toRightOf="@+id/imageCorrespondance"
        android:gravity="center_vertical|left"
        android:paddingLeft="5dip"
        android:paddingRight="2dip"
        android:textSize="16dip" 
        android:text="vers Direction Arrêt"/>

    <ImageView
        android:id="@+id/iconeHandicap"
        android:layout_width="37dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/isfavori"
        android:paddingLeft="45dip"
        android:paddingRight="2dip"
        android:layout_alignBottom="@+id/imageCorrespondance"
        android:src="@drawable/handicap" />

    <TextView
        android:id="@+id/nomArret"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/iconeHandicap"
        android:layout_toRightOf="@+id/imageCorrespondance"
        android:gravity="center_vertical|left"
        android:paddingTop="8dip"
        android:textSize="20dip" 
        android:text="Nom arrêt"/>
    
    <LinearLayout
        android:id="@+id/separateurCorrespondance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageCorrespondance"
        android:orientation="vertical"
        android:visibility="invisible" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detailCorrespondance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/separateurCorrespondance"
        android:orientation="vertical"
        android:visibility="invisible" >
    </LinearLayout>

</RelativeLayout>
