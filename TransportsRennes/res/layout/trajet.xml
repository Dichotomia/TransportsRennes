<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView android:id="@+id/iconePortion1"
               android:paddingLeft="4dip"
               android:paddingTop="5dip"
               android:layout_width="54dip"
               android:layout_height="55dip"/>

    <TextView android:id="@+id/departHeure1"
              android:paddingLeft="5dip"
              android:paddingTop="5dip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18dip"
              android:layout_toRightOf="@id/iconePortion1"
              android:layout_alignParentTop="true"/>

    <TextView android:id="@+id/depart1"
              android:paddingLeft="5dip"
              android:paddingTop="5dip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18dip"
              android:layout_toRightOf="@id/departHeure1"/>

    <TextView android:id="@+id/arriveeHeure1"
              android:paddingLeft="5dip"
              android:paddingTop="5dip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18dip"
              android:layout_toRightOf="@id/iconePortion1"
              android:layout_below="@id/departHeure1"/>

    <TextView android:id="@+id/arrivee1"
              android:paddingLeft="5dip"
              android:paddingTop="5dip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18dip"
              android:layout_toRightOf="@id/arriveeHeure1"
              android:layout_alignTop="@id/arriveeHeure1"/>

    <ImageView android:id="@+id/iconePortion2"
               android:paddingLeft="4dip"
               android:paddingTop="5dip"
               android:layout_width="54dip"
               android:layout_height="55dip"
               android:layout_below="@id/iconePortion1"/>

    <TextView android:id="@+id/departHeure2"
              android:paddingLeft="5dip"
              android:paddingTop="5dip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18dip"
              android:layout_toRightOf="@id/iconePortion2"
              android:layout_alignTop="@id/iconePortion2"/>

    <TextView android:id="@+id/depart2"
              android:paddingLeft="5dip"
              android:paddingTop="5dip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18dip"
              android:layout_toRightOf="@id/departHeure2"/>

    <TextView android:id="@+id/arriveeHeure2"
              android:paddingLeft="5dip"
              android:paddingTop="5dip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18dip"
              android:layout_toRightOf="@id/iconePortion2"
              android:layout_below="@id/departHeure2"/>

    <TextView android:id="@+id/arrivee2"
              android:paddingLeft="5dip"
              android:paddingTop="5dip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18dip"
              android:layout_toRightOf="@id/arriveeHeure2"
              android:layout_alignTop="@id/arriveeHeure2"/>
</RelativeLayout>
