<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/conteneurImage"
                  android:layout_width="44dip"
                  android:paddingBottom="5dip"
                  android:paddingTop="5dip"
                  android:paddingLeft="2dip"
                  android:paddingRight="2dip"
                  android:layout_height="50dip"
                  android:gravity="center_vertical|center_horizontal"/>
    <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_toRightOf="@id/conteneurImage"
            android:layout_toLeftOf="@id/googlemap">
        <TextView android:id="@+id/nomLong"
                  android:padding="5dip"
                  android:layout_width="fill_parent"
                  android:layout_height="50dip"
                  android:textSize="20dip"
                  android:gravity="center_vertical|left"/>
    </HorizontalScrollView>

    <ImageView android:id="@+id/googlemap"
               android:layout_width="44dip"
               android:paddingBottom="5dip"
               android:paddingTop="5dip"
               android:paddingLeft="2dip"
               android:paddingRight="4dip"
               android:layout_height="50dip"
               android:src="@android:drawable/ic_dialog_map"
               android:layout_alignParentRight="true"/>

    <TextView android:id="@+id/directionEntete"
              android:paddingLeft="5dip"
              android:paddingTop="5dip"
              android:paddingBottom="3dip"
              android:paddingRight="6dip"
              android:layout_width="wrap_content"
              android:layout_height="30dip"
              android:textSize="20dip"
              android:gravity="center_vertical|left"
              android:text="Direction :"
              android:layout_below="@id/conteneurImage"
              android:layout_alignParentLeft="true"/>

    <HorizontalScrollView
            android:id="@+id/directionArretCouranteScroll"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_below="@id/conteneurImage"
            android:layout_toRightOf="@id/directionEntete">
        <TextView android:id="@+id/directionArretCourante"
                  android:paddingRight="5dip"
                  android:paddingTop="5dip"
                  android:paddingBottom="3dip"
                  android:layout_width="wrap_content"
                  android:layout_height="30dip"
                  android:textSize="20dip"
                  android:text="Toutes"
                  android:gravity="center_vertical|left"
                  android:drawablePadding="2dip"
                  android:drawableRight="@android:drawable/arrow_down_float"/>
    </HorizontalScrollView>

    <ImageView android:layout_width="fill_parent"
               android:layout_height="10dip"
               android:layout_below="@id/directionEntete"
               android:paddingTop="4dip"
               android:paddingBottom="0dip"
               android:src="@android:drawable/divider_horizontal_dim_dark"
               android:id="@+id/listearrets_separateur"/>

    <ListView android:id="@id/android:list"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_below="@id/listearrets_separateur"
              android:layout_alignParentLeft="true"
              android:divider="@android:drawable/divider_horizontal_dim_dark"
            />
</RelativeLayout>
