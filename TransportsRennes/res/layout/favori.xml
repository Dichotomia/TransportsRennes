<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout android:id="@+id/conteneurImage"
                  android:layout_width="56dip"
                  android:layout_height="56dip"
                  android:padding="3dip"
                  android:layout_alignParentLeft="true"
                  android:orientation="horizontal"
                  android:gravity="center_vertical">
    </LinearLayout>

    <TextView android:id="@+id/nomArret"
              android:paddingLeft="5dip"
              android:paddingTop="5dip"
              android:paddingBottom="2dip"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:textSize="18dip"
              android:gravity="center_vertical|left"
              android:layout_toRightOf="@id/conteneurImage"/>

    <TextView android:id="@+id/directionArret"
              android:paddingRight="5dip"
              android:paddingLeft="6dip"
              android:paddingTop="3dip"
              android:paddingBottom="2dip"
              android:layout_width="wrap_content"
              android:layout_height="28dip"
              android:textSize="15dip"
              android:maxLines="1"
              android:gravity="center_vertical|right"
              android:layout_below="@id/nomArret"
              android:layout_toRightOf="@id/conteneurImage"/>

    <TextView android:id="@+id/tempsRestant"
              android:paddingRight="5dip"
              android:paddingTop="2dip"
              android:paddingBottom="3dip"
              android:layout_width="fill_parent"
              android:layout_height="28dip"
              android:textSize="15dip"
              android:gravity="center_vertical|right"
              android:layout_toRightOf="@id/directionArret"
              android:layout_below="@id/nomArret"
            android:layout_alignParentRight="true"/>
</RelativeLayout>
