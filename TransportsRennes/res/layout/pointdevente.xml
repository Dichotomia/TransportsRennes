<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <TextView android:id="@+id/pointdevente_nom"
              android:paddingRight="5dip"
              android:paddingLeft="5dip"
              android:paddingTop="5dip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20dip"
              android:gravity="center_vertical|left"
              android:marqueeRepeatLimit="marquee_forever"/>

    <TextView android:id="@+id/pointdevente_telephone"
              android:paddingLeft="5dip"
              android:paddingBottom="8dip"
              android:layout_width="wrap_content"
              android:layout_height="38dip"
              android:textSize="18dip"
              android:gravity="center_vertical|left"
              android:layout_below="@id/pointdevente_nom"
              android:layout_alignParentLeft="true"/>


    <TextView android:id="@+id/pointdevente_distance"
              android:paddingRight="5dip"
              android:paddingBottom="8dip"
              android:layout_width="wrap_content"
              android:layout_height="38dip"
              android:textSize="18dip"
              android:gravity="center_vertical|right"
              android:layout_toRightOf="@id/pointdevente_telephone"
              android:layout_below="@id/pointdevente_nom"
              android:layout_alignParentRight="true"/>
</RelativeLayout>
