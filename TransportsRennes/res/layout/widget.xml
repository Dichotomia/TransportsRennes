<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/widget_bg"
                android:id="@+id/widgetlayout">
    <ImageView android:id="@+id/iconeLigne"
               android:layout_width="45dip"
               android:layout_height="44dip"
               android:paddingTop="19dip"
               android:paddingLeft="20dip"
               android:gravity="center_vertical|center_horizontal"/>

    <TextView android:id="@+id/nomArret"
              android:paddingLeft="5dip"
              android:paddingTop="20dip"
              android:layout_width="95dip"
              android:layout_height="wrap_content"
              android:textSize="14dip"
              android:textColor="#080808"
              android:gravity="center_vertical|left"
              android:layout_toRightOf="@id/iconeLigne"/>

    <TextView android:id="@+id/tempsRestant1"
              android:paddingLeft="24dip"
              android:paddingTop="10dip"
              android:layout_width="140dip"
              android:layout_height="wrap_content"
              android:textSize="20dip"
              android:textColor="#080808"
              android:gravity="center_vertical|left"
              android:layout_below="@id/nomArret"
              android:layout_alignParentLeft="true"/>

    <TextView android:id="@+id/tempsRestant2"
              android:paddingLeft="24dip"
              android:paddingTop="5dip"
              android:layout_width="140dip"
              android:layout_height="wrap_content"
              android:textSize="20dip"
              android:textColor="#080808"
              android:gravity="center_vertical|left"
              android:layout_below="@id/tempsRestant1"
              android:layout_alignParentLeft="true"/>

    <TextView android:id="@+id/tempsRestant3"
              android:paddingLeft="24dip"
              android:paddingTop="5dip"
              android:layout_width="140dip"
              android:layout_height="wrap_content"
              android:textSize="20dip"
              android:textColor="#080808"
              android:gravity="center_vertical|left"
              android:layout_below="@id/tempsRestant2"
              android:layout_alignParentLeft="true"/>

    <TextView android:id="@+id/tempsRestant4"
              android:paddingLeft="24dip"
              android:paddingTop="5dip"
              android:layout_width="140dip"
              android:layout_height="wrap_content"
              android:textSize="20dip"
              android:textColor="#080808"
              android:gravity="center_vertical|left"
              android:layout_below="@id/tempsRestant3"
              android:layout_alignParentLeft="true"/>

</RelativeLayout>