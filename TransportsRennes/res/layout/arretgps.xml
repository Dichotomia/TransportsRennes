<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="76dip"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ligneAvecCorrespondance"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:paddingTop="0dip"
        android:src="@drawable/ligneaveccorrespondance" />

    <TextView
        android:id="@+id/arretgps_nomArret"
        android:layout_width="wrap_content"
        android:layout_height="38dip"
        android:layout_toRightOf="@+id/iconeLigne"
        android:gravity="center_vertical|left"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:text="NomArret"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/arretgps_tempsRestant"
        android:layout_width="wrap_content"
        android:layout_height="38dip"
        android:layout_alignLeft="@+id/arretgps_distance"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@id/arretgps_nomArret"
        android:gravity="center_vertical|left"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/arretgps_distance"
        android:layout_width="wrap_content"
        android:layout_height="38dip"
        android:layout_alignBottom="@+id/arretgps_direction"
        android:layout_alignParentRight="true"
        android:layout_below="@id/arretgps_nomArret"
        android:gravity="center_vertical|right"
        android:paddingBottom="8dip"
        android:paddingRight="5dip"
        android:text="Distance"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/arretgps_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ligneAvecCorrespondance"
        android:layout_toLeftOf="@id/arretgps_distance"
        android:layout_toRightOf="@+id/ligneAvecCorrespondance"
        android:gravity="center_vertical|left"
        android:minHeight="30dip"
        android:paddingLeft="2dip"
        android:paddingRight="5dip"
        android:paddingTop="2dip"
        android:text="Direction"
        android:textSize="14dip" />

    <ImageView
        android:id="@+id/iconeLigne"
        android:layout_width="44dip"
        android:layout_height="46dip"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ligneAvecCorrespondance"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="2dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="4dip" />

</RelativeLayout>
