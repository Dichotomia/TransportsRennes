<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageSeparateurCorrespondance"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentLeft="true"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:paddingTop="0dip"
        android:src="@drawable/lignecorrespondance" />

    <TextView
        android:id="@+id/libelleCorrespondance"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageSeparateurCorrespondance"
        android:gravity="center_vertical|left"
        android:text="Correspondance"
        android:textSize="20dip" 
        android:textStyle="italic"/>

</RelativeLayout>
