<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="50dip"
        android:orientation="vertical" >

        <include layout="@layout/actionbar" />

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageCorrespondance"
                android:layout_width="35dip"
                android:layout_height="70dip"
                android:paddingBottom="0dip"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:paddingTop="0dip"
                android:src="@drawable/lignedebutdetail" />

            <HorizontalScrollView
                android:id="@+id/detailArret_scrolling"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/alerte"
                android:layout_toRightOf="@+id/iconeLigne" >

                <TextView
                    android:id="@id/detailArret_nomArret"
                    android:layout_width="wrap_content"
                    android:layout_height="35dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="2dip"
                    android:text="Nom ArrÃªt"
                    android:textSize="20dip" />
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:layout_below="@+id/detailArret_scrolling"
                android:layout_toLeftOf="@+id/alerte"
                android:layout_toRightOf="@+id/iconeLigne" >

                <TextView
                    android:id="@id/nomLong"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="2dip"
                    android:text="Nom Long"
                    android:textSize="20dip" />
            </HorizontalScrollView>

            <ScrollView
                android:id="@id/detailCorrespondance_scroll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageCorrespondance" >

                <LinearLayout
                    android:id="@id/detailCorrespondance"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/separateurDetailCorrespondance"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:id="@+id/detailCorrespondance"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separateurDetailCorrespondance"
                        android:orientation="vertical" />
                </LinearLayout>
            </ScrollView>

            <ListView
                android:id="@id/android:list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/detailCorrespondance_scroll"
                android:cacheColorHint="#00000000" />

            <TextView
                android:id="@id/android:empty"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageCorrespondance"
                android:gravity="center"
                android:padding="10dip"
                android:text="@string/detailarret_empty"
                android:textSize="18dip" />

            <ImageView
                android:id="@+id/iconeLigne"
                android:layout_width="44dip"
                android:layout_height="50dip"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageCorrespondance"
                android:gravity="center_vertical|center_horizontal"
                android:paddingBottom="5dip"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:paddingTop="5dip" />

            <ImageView
                android:id="@+id/alerte"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:layout_above="@+id/detailCorrespondance_scroll"
                android:layout_alignParentRight="true"
                android:paddingBottom="2dip"
                android:paddingLeft="5dip"
                android:paddingTop="2dip"
                android:src="@android:drawable/ic_dialog_alert" />
        </RelativeLayout>
    </LinearLayout>

    <com.google.ads.AdView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        ads:adSize="BANNER"
        ads:adUnitId="a14dd0387e93eb2" />

</FrameLayout>