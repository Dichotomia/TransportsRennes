<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginBottom="50dip">

		<ImageView android:id="@+id/iconeLigne"
			android:layout_width="44dip" android:paddingBottom="5dip"
			android:paddingTop="5dip" android:paddingLeft="2dip"
			android:paddingRight="2dip" android:layout_height="50dip"
			android:gravity="center_vertical|center_horizontal" />
		<ImageView android:id="@+id/googlemap" android:layout_width="44dip"
			android:paddingBottom="5dip" android:paddingTop="5dip"
			android:paddingLeft="2dip" android:paddingRight="4dip"
			android:layout_height="50dip" android:src="@android:drawable/ic_dialog_map"
			android:layout_alignParentRight="true" />

		<HorizontalScrollView android:layout_width="fill_parent"
			android:layout_height="50dip" android:layout_toRightOf="@id/iconeLigne"
			android:layout_toLeftOf="@id/googlemap">
			<TextView android:id="@+id/nomLong" android:padding="5dip"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:textSize="20dip" android:gravity="center_vertical|left" />
		</HorizontalScrollView>

		<ImageView android:id="@+id/imageCorrespondance"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingLeft="10dip" android:paddingRight="10dip"
			android:paddingTop="10dip" android:paddingBottom="10dip"
			android:src="@drawable/arrow_right_float"
			android:layout_alignParentRight="true" android:layout_below="@id/iconeLigne" />


		<ImageView android:id="@+id/alerte" android:paddingLeft="5dip"
			android:paddingTop="2dip" android:paddingBottom="2dip"
			android:layout_width="wrap_content" android:layout_height="38dip"
			android:src="@android:drawable/ic_dialog_alert" android:layout_below="@id/iconeLigne"
			android:layout_alignParentLeft="true" />

		<HorizontalScrollView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_below="@id/iconeLigne"
			android:layout_toLeftOf="@id/imageCorrespondance"
			android:layout_toRightOf="@id/alerte" android:id="@+id/detailArret_scrolling">
			<TextView android:id="@+id/detailArret_nomArret"
				android:paddingLeft="5dip" android:paddingRight="5dip"
				android:paddingTop="5dip" android:paddingBottom="3dip"
				android:layout_width="fill_parent" android:layout_height="38dip"
				android:textSize="20dip" android:gravity="center_vertical|left"
				android:layout_alignParentLeft="true" />
		</HorizontalScrollView>

		<ScrollView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/detailCorrespondance_scroll"
			android:layout_below="@id/detailArret_scrolling">
			<LinearLayout android:id="@+id/detailCorrespondance"
				android:visibility="invisible" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="vertical" />
		</ScrollView>

		<ImageView android:layout_width="fill_parent"
			android:layout_height="10dip" android:layout_below="@id/detailCorrespondance_scroll"
			android:paddingTop="4dip" android:paddingBottom="0dip"
			android:src="@android:drawable/divider_horizontal_dim_dark"
			android:id="@+id/separateur" />

		<ListView android:id="@id/android:list" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_below="@id/separateur"
			android:layout_alignParentLeft="true"
			android:divider="@android:drawable/divider_horizontal_dim_dark" />
		<TextView android:id="@id/android:empty"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_below="@id/separateur" android:layout_alignParentLeft="true"
			android:gravity="center" android:textSize="18dip" android:padding="10dip"
			android:text="@string/detailarret_empty" />

	</RelativeLayout>
	<com.google.ads.AdView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/adView" android:layout_width="fill_parent"
		android:layout_height="wrap_content" ads:adUnitId="a14dd0387e93eb2"
		ads:adSize="BANNER" android:layout_gravity="bottom" />

</FrameLayout>
