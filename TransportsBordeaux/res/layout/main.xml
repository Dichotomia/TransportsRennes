<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
        <Button android:id="@+id/home_btn_bus"
                style="@style/HomeButton"
                android:text="@string/btn_bus"
                android:drawableTop="@drawable/home_btn_bus"/>
        <Button android:id="@+id/home_btn_bus_favori"
                style="@style/HomeButton"
                android:text="@string/btn_bus_favori"
                android:drawableTop="@drawable/home_btn_bus_favori"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <Button android:id="@+id/home_btn_velo"
                style="@style/HomeButton"
                android:text="@string/btn_velo"
                android:drawableTop="@drawable/home_btn_velo"/>
        <Button android:id="@+id/home_btn_velo_favori"
                style="@style/HomeButton"
                android:text="@string/btn_velo_favori"
                android:drawableTop="@drawable/home_btn_velo_favori"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <Button android:id="@+id/home_btn_alert"
                style="@style/HomeButton"
                android:text="@string/btn_alert"
                android:drawableTop="@drawable/home_btn_alert"/>
    </TableRow>

</TableLayout>
