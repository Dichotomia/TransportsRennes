<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginBottom="50dip">

		<ImageView android:id="@+id/iconeLigne"
			android:layout_width="44dip" android:paddingBottom="5dip"
			android:paddingTop="5dip" android:paddingLeft="2dip"
			android:paddingRight="2dip" android:layout_height="50dip"
			android:gravity="center_vertical|center_horizontal" />
		<HorizontalScrollView android:layout_width="fill_parent"
			android:layout_height="50dip" android:layout_toRightOf="@id/iconeLigne">
			<TextView android:id="@+id/nomLong" android:padding="5dip"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:textSize="20dip" android:gravity="center_vertical|left" />
		</HorizontalScrollView>
		<HorizontalScrollView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_below="@id/iconeLigne"
			android:id="@+id/detailTrajet_scrolling">
			<TextView android:id="@+id/detailTrajet_nomTrajet"
				android:paddingLeft="5dip" android:paddingRight="5dip"
				android:paddingTop="5dip" android:paddingBottom="3dip"
				android:layout_width="fill_parent" android:layout_height="38dip"
				android:textSize="20dip" android:gravity="center_vertical|left"
				android:layout_alignParentLeft="true" />
		</HorizontalScrollView>

		<ImageView android:layout_width="fill_parent"
			android:layout_height="10dip" android:layout_below="@id/detailTrajet_scrolling"
			android:paddingTop="4dip" android:paddingBottom="0dip"
			android:src="@android:drawable/divider_horizontal_dim_dark"
			android:id="@+id/separateur" />

		<ListView android:id="@id/android:list" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_below="@id/separateur"
			android:layout_alignParentLeft="true"
			android:divider="@android:drawable/divider_horizontal_dim_dark" />

	</RelativeLayout>
	<com.google.ads.AdView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/adView" android:layout_width="fill_parent"
		android:layout_height="wrap_content" ads:adUnitId="a14dd0387e93eb2"
		ads:adSize="BANNER" android:layout_gravity="bottom" />

</FrameLayout>