<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="fr.ybo.transportsbordeaux" android:installLocation="auto"
	android:versionCode="102" android:versionName="1.0.2">


	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:debuggable="false" android:name="TransportsBordeauxApplication"
		android:theme="@android:style/Theme.NoTitleBar">
		<activity android:name=".TransportsBordeaux"
			android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".ListeBus" android:configChanges="orientation|keyboardHidden" />
		<activity android:name=".ListArret" android:configChanges="orientation|keyboardHidden" />
        <activity android:name=".ListArretByPosition" android:configChanges="orientation|keyboardHidden"/>
		<activity android:name=".DetailArret" android:configChanges="orientation|keyboardHidden" />
		<activity android:name=".ListFavoris" android:configChanges="orientation|keyboardHidden" />
		<activity android:name=".ListStationsByPosition"
			android:configChanges="orientation|keyboardHidden" />
		<activity android:name=".ListStationsFavoris"
			android:configChanges="orientation|keyboardHidden" />
		<activity android:name=".TabAlertes" android:configChanges="orientation|keyboardHidden" />
		<activity android:name=".ListAlerts" android:configChanges="orientation|keyboardHidden" />
		<activity android:name=".ListTwitter" android:configChanges="orientation|keyboardHidden" />
		<activity android:name=".StationsOnMap"
			android:configChanges="orientation|keyboardHidden" />
		<activity android:name=".ArretsOnMap"
			android:configChanges="orientation|keyboardHidden" />
		<activity android:name=".DetailTrajet" android:configChanges="orientation|keyboardHidden" />

		<receiver android:name=".TransportsWidget11" android:label="@string/widget11_name">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/transportswidget11" />
		</receiver>
		<activity android:name=".TransportsWidget11Configure">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
			</intent-filter>
		</activity>

		<receiver android:name=".TransportsWidget21" android:label="@string/widget21_name">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/transportswidget21" />
		</receiver>
		<activity android:name=".TransportsWidget21Configure">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
			</intent-filter>
		</activity>

		<activity android:name="com.google.ads.AdActivity"
			android:configChanges="keyboard|keyboardHidden|orientation" />

		<uses-library android:name="com.google.android.maps" />

	</application>


	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="8"
		android:maxSdkVersion="11" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>